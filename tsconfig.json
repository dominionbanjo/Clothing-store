{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "ES2022",
    "target": "es2022",

    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": ["client", "node_modules"]
}
